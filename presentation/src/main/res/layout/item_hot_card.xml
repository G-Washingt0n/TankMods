<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="165dp"
    android:background="@drawable/roundrectangle"
    android:layout_marginEnd="10dp"
    android:layout_marginStart="10dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/hotCard_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="14dp"
                android:layout_marginEnd="9dp"
                android:text="Card header"
                android:textSize="18sp"
                app:layout_constraintStart_toEndOf="@+id/hotCard_img"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/hotCard_description"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="9dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="7dp"
                android:text="Card descrip"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/hotCard_img"
                app:layout_constraintTop_toBottomOf="@id/hotCard_header" />

            <ImageView
                android:id="@+id/hotCard_img"
                android:layout_width="173dp"
                android:layout_height="165dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@drawable/semiroundrect"/>
            <LinearLayout
                android:id="@+id/hotCard_tagLinear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:orientation="horizontal" />
            <ImageView
                android:id="@+id/hotCard_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/heart"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="18dp"
                app:layout_constraintStart_toEndOf="@id/hotCard_img"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <TextView
                android:id="@+id/hotCard_likesCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:layout_marginStart="2dp"
                android:layout_marginBottom="18dp"
                app:layout_constraintStart_toEndOf="@id/hotCard_like"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <ImageView
                android:id="@+id/hotCard_downloads"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/downloads"
                android:layout_marginStart="6dp"
                android:layout_marginBottom="18dp"
                app:layout_constraintStart_toEndOf="@id/hotCard_likesCount"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <TextView
                android:id="@+id/hotCard_downldsCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:layout_marginStart="4dp"
                android:layout_marginBottom="18dp"
                app:layout_constraintStart_toEndOf="@id/hotCard_downloads"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <TextView
                android:id="@+id/hotCard_openBtn"
                android:layout_width="88dp"
                android:layout_height="26dp"
                android:textAlignment="center"
                android:background="@drawable/roundrectangle"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>


        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
